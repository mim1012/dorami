# ================================
# Dorami Staging Environment Variables
# ================================
# Copy this file to .env.staging and fill in the values
# Usage: docker-compose -f docker-compose.staging.yml --env-file .env.staging up -d

# ================================
# Database (PostgreSQL)
# ================================
POSTGRES_USER=dorami
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=dorami

# ================================
# Redis
# ================================
# Leave empty for no password (not recommended for production)
REDIS_PASSWORD=your_redis_password_here

# ================================
# JWT & Security
# ================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d

# Generate with: openssl rand -hex 32
PROFILE_ENCRYPTION_KEY=your_64_char_hex_encryption_key_here

# ================================
# Kakao OAuth (Optional)
# ================================
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=
KAKAO_CALLBACK_URL=https://staging.yourdomain.com/api/auth/kakao/callback

# ================================
# URLs
# ================================
# Frontend URL (for CORS)
FRONTEND_URL=https://staging.yourdomain.com

# Public URLs (used by frontend)
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_WS_URL=https://staging.yourdomain.com
NEXT_PUBLIC_CDN_URL=https://staging.yourdomain.com

# ================================
# Logging
# ================================
LOG_LEVEL=debug

# ================================
# Domain (for SSL/Nginx)
# ================================
DOMAIN=staging.yourdomain.com
