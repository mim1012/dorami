# Application
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/live_commerce?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-jwt-secret-change-in-production-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Profile Encryption (AES-256-GCM)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PROFILE_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Session
SESSION_TIMEOUT_MINUTES=30

# Rate Limiting
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW_MINUTES=15

# Kakao OAuth
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_CALLBACK_URL=http://localhost:3001/auth/kakao/callback

# KakaoTalk Notifications
KAKAOTALK_API_KEY=your_kakaotalk_api_key

# Frontend
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# WebSocket / Redis Pub/Sub
REDIS_PUBSUB_URL=redis://localhost:6379/1

# Streaming
RTMP_SERVER_URL=rtmp://localhost:1935/live
HLS_SERVER_URL=http://localhost:8080/hls

# Admin Whitelist (comma-separated emails)
# Users with these emails will be automatically assigned ADMIN role on login
ADMIN_EMAILS=admin@livecommerce.com,your-admin@kakao.com

# Cart & Reservation Timers
CART_EXPIRATION_MINUTES=10
RESERVATION_PROMOTION_TIMER_MINUTES=10
ORDER_EXPIRATION_MINUTES=10

# Auth Token TTL (should match JWT_ACCESS_EXPIRES_IN)
AUTH_BLACKLIST_TTL_SECONDS=900

# Notification Retry Settings
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_RETRY_DELAY_MS=1000

# Bank Transfer Information
BANK_NAME=우리은행
BANK_ACCOUNT_NUMBER=1002-123-456789
BANK_ACCOUNT_HOLDER=라이브커머스

# Excel Report Settings
EXCEL_HEADER_COLOR=FFE91E63
